:80 {
    encode zstd gzip
    root * /srv/dist
    file_server browse
    try_files {path}  /

    log {
        format json
        output file /logs/site.log {
        }   
    }
}

:5000 {
    reverse_proxy stock-api:5000 

    log {
        format json
        output file /logs/api.log {
        }   
    }
}

